<div class="col-10 offset-1 mt-3 px-0 d-flex flex-column align-items-center"">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: { class: 'flex-form mt-3 dark-content-box' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %> 
    <h2>Sign up</h2>

    <div class="field form-group">
      <%= f.label :email, class: 'fc-pirate-gold' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: 'fc-pirate-gold' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <br />
    <div class="field form-group">
      <%= f.label :password_confirmation, class: 'fc-pirate-gold' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Go!", class: 'black-gold-btn font-size-ml mt-4' %>
    </div>
    <div class="inner-container mt-4">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
