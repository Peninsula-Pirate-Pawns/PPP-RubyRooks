<div class="col-10 offset-1 mt-3 px-0 d-flex flex-column align-items-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
      html: { method: :post, class: 'flex-form mt-3 dark-content-box' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>Lost yer password?</h2>

    <div class="field form-group">
      <%= f.label :email, class: 'fc-pirate-gold' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Send Reset E-mail", class: 'black-gold-btn font-size-ml mt-2' %>
    </div>

    <div class="inner-container mt-4">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
